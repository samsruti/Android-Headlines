<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host_main_fragment"
    app:startDestination="@id/headlinesFragment">
    <fragment
        android:id="@+id/headlinesFragment"
        android:name="com.byjus.headlines.assignment.samsruti.ui.headlines.HeadlinesFragment"
        android:label="HeadlinesFragment" >
        <action
            android:id="@+id/action_headlinesFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.byjus.headlines.assignment.samsruti.ui.details.DetailsFragment"
        android:label="DetailsFragment" >
        <argument
            android:name="headline_details"
            app:argType="com.byjus.headlines.assignment.samsruti.domain.News" />
    </fragment>
</navigation>